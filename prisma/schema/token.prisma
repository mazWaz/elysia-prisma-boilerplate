model Token {
  id                    String          @id @default(ulid())
  token                 String
  type                  TokenType 
  expires               DateTime      
  blacklisted           Boolean
  createdAt             DateTime        @default(now())
  userId                String         
  user                  User            @relation("UserTokens", fields: [userId], references: [id])
}

enum TokenType {
  ACCESS
  REFRESH
  RESET_PASSWORD
  VERIFY_EMAIL
}